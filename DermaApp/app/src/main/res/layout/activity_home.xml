<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="92dp"
        style="@style/ButtonHome"
        android:text="@string/scan_indication"
        app:layout_constraintEnd_toStartOf="@+id/btn_profile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_name_user"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_user" />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        style="@style/ButtonHome"
        android:text="PROFILE"
        app:layout_constraintBottom_toBottomOf="@+id/btn_scan"
        app:layout_constraintEnd_toEndOf="@+id/img_user_home"
        app:layout_constraintTop_toTopOf="@+id/btn_scan"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_hello"
        style="@style/BigText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Hello"
        app:layout_constraintEnd_toStartOf="@+id/img_user_home"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="25dp"
        style="@style/BigText"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/tv_hello"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_hello"
        app:layout_constraintTop_toBottomOf="@+id/tv_hello"
        tools:text="Al Zaini zharie" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_user_home"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_hello"
        app:layout_constraintVertical_bias="1.0"
        tools:src="@drawable/ic_user" />

    <View
        android:id="@+id/view"
        android:layout_width="408dp"
        android:layout_height="344dp"
        android:background="@drawable/bg_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>