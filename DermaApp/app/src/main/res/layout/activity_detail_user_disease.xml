<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="11dp"
    android:layout_height="match_parent"
    tools:context=".DetailUserDiseaseActivity">

    <ImageView
        android:id="@+id/image_skin"
        android:layout_width="339dp"
        android:layout_height="223dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Keterangan :"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/image_skin"
        app:layout_constraintTop_toBottomOf="@+id/image_skin" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Penyakit berdasarkan sistem :"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rekomendasi pengobatan oleh dokter :"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_doctor"
        app:layout_constraintStart_toStartOf="@+id/tv_name_doctor"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_doctor" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Penyakit berdasarkan dokter :"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_penyakit_by_sistem"
        app:layout_constraintStart_toStartOf="@+id/tv_penyakit_by_sistem"
        app:layout_constraintTop_toBottomOf="@+id/tv_penyakit_by_sistem" />

    <TextView
        android:id="@+id/textViewv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Diperiksa oleh dokter :"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_penyakit_by_dokter"
        app:layout_constraintStart_toStartOf="@+id/tv_penyakit_by_dokter"
        app:layout_constraintTop_toBottomOf="@+id/tv_penyakit_by_dokter" />

    <TextView
        android:id="@+id/tv_treatment_recommendations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxLines="5"
        android:text="Bisa dilakukan blablablabla untuk pemeriksaan"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/tv_name_doctor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dr. Al Zaini"
        app:layout_constraintEnd_toEndOf="@+id/textViewv"
        app:layout_constraintStart_toStartOf="@+id/textViewv"
        app:layout_constraintTop_toBottomOf="@+id/textViewv" />

    <TextView
        android:id="@+id/tv_penyakit_by_sistem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:text="Panu" />

    <TextView
        android:id="@+id/tv_penyakit_by_dokter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Kerumut"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


</androidx.constraintlayout.widget.ConstraintLayout>